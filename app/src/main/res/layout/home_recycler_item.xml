<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="20dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="#ffffff"
    android:gravity="center">
<ImageView
    android:id="@+id/news_content_imge"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:scaleType="centerCrop"
    android:src="@drawable/service"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_Title"
            android:text="新闻标题"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="      新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容新闻内容"
            android:textSize="12sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/qianhui_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/user_ico" />

                <TextView
                    android:id="@+id/news_handlers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YUSION"
                    android:textSize="10dp"
                    android:textColor="@color/qianhui_color"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginLeft="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/date_ico" />

                <TextView
                    android:id="@+id/news_handle_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-06-09"
                    android:textColor="@color/qianhui_color"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/browse_ico" />

                <TextView
                    android:id="@+id/news_scan_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="201596"
                    android:textSize="10dp"
                    android:textColor="@color/qianhui_color"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>