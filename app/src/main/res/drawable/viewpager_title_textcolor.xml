<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--自定义ViewPageIndicator的字体颜色-->
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:color="#606060"/>
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:color="@color/colorAdvise"/>

    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:color="#606060"/>
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:color="@color/colorAdvise"/>

    <!-- Pressed -->
    <item android:state_pressed="true" android:color="@color/colorAdvise"/>

</selector>